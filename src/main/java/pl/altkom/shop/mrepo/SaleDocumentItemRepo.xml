<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pl.altkom.shop.mrepo.SaleDocumentItemRepo" >
        
        <resultMap type='pl.altkom.shop.model.SaleDocumentItem' id='SaleDocumentItemResult'>
	    <id property='id' column='id'/>
	    <result property='lp' column='lp'/>
	<association property='product' column="product_id"   select="pl.altkom.shop.mrepo.ProductRepo.findById" />
	   </resultMap>
	   
    <select id="findAll" resultMap="SaleDocumentItemResult" >
        select * from SALEDOCUMENTITEM
    </select>
</mapper>